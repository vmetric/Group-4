<Window x:Class="Group_4_Project_Num2.Experimental_Data"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group_4_Project_Num2"
        mc:Ignorable="d"
        Title="Experimental_Data" Height="75" Width="475">
    <Grid>
        <ComboBox x:Name="comboBox_Fabric" HorizontalAlignment="Left" Margin="319,13,0,0" VerticalAlignment="Top" Width="120" DropDownClosed="comboBox_Fabric_DropDownClosed">
            <ComboBoxItem Content="Wool"/>
            <ComboBoxItem Content="Cotton"/>
            <ComboBoxItem Content="Spandex"/>
            <ComboBoxItem Content="Polyester"/>
            <ComboBoxItem Content="Nomex"/>
        </ComboBox>
        <Label Content="Select the fabric you'd like to see experimental data for:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Display" HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="244" Width="429" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
